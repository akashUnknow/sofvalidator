<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.akash.sofvalidator.controller.MainController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <VBox>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            <Button text="Upload SOF PDF" onAction="#uploadSofPdf"/>
            <Button text="Upload RAR File" onAction="#uploadRar"/>
            <Button text="Validate Files" onAction="#validateFiles"/>
        </VBox>
    </top>

    <center>
        <TextArea fx:id="resultArea" editable="false"/>
    </center>

</BorderPane>